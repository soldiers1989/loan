<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/progressbar_background"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:endColor="@color/progressbar_light_right"
                    android:startColor="@color/progressbar_light_left" />
                <corners android:radius="5dp" />
            </shape>
        </clip>
    </item>

</layer-list>