<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEF0F3">

    <include
        android:id="@+id/title"
        layout="@layout/public_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:fadeScrollbars="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bankbackground5"
                android:orientation="vertical"

                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                android:paddingBottom="30dp">

                <RelativeLayout
                    android:id="@+id/ll_bankcardnumber"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/bankcard5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="Số tài khoản ngân hàng"
                        android:textColor="#FF444444"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_bankcardnumber"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="* Đề xuất rồi không sửa được nữa"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="#FF444444"
                        android:textColorHint="#FF999999"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/dot2"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/view" />

                <RelativeLayout
                    android:id="@+id/ll_bankcardnumber_check"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/bankcardcheck" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="Xác nhận số tài khoản"
                        android:textColor="#FF444444"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_bankcardnumber_check"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="* Đề xuất rồi không sửa được nữa"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="#FF444444"
                        android:textColorHint="#FF999999"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/view" />

                <RelativeLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/bankcardname5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="@string/name"
                        android:textColor="#FF444444"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="* Đề xuất rồi không sửa được nữa"
                        android:singleLine="true"
                        android:textColor="#FF444444"
                        android:textColorHint="#FF999999"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/view" />

                <RelativeLayout
                    android:id="@+id/ll_bankmaster"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/bankname5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="Tên ngân hàng"
                        android:textColor="#FF444444"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_bankmaster"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="ACB - TMCP Á Châu"
                        android:textColor="#FF444444"
                        android:textColorHint="#FF999999"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/into" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/dot3"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/view" />

                <RelativeLayout
                    android:id="@+id/ll_bankbranch"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/bankbranch5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="Tên Chi nhánh"
                        android:textColor="#FF444444"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_bankbranch"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="* Đề xuất rồi không sửa được nữa"
                        android:singleLine="true"
                        android:textColor="#FF444444"
                        android:textColorHint="#FF999999"
                        android:textSize="14sp" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="* Nếu mở TK ở phòng giao dịch, vui lòng nhập tên phòng giao dịch kèm tỉnh thành"
                android:textColor="#FF999999"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_bankinfo_next"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/home_button"
                android:text="Hoàn thành"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33111111"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:paddingTop="100dp"
        android:paddingRight="20dp"
        android:paddingBottom="700dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/choose_bank_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/choose_bank" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/choose_bank"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white" />

            <ListView
                android:id="@+id/lv_bank_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:cacheColorHint="#00000000"
                android:divider="@color/white"
                android:dividerHeight="0.5dp"
                android:scrollbars="none"></ListView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>