<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE5E5E5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/home_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_credit">

            <TextView
                android:id="@+id/tv_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="10,000,000"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_credit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/vnd9" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/term"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/loan_amount"
            android:textColor="#FFFF6C5A"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="6"
        android:background="@drawable/home_background2"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/vnd12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Vay Nhanh"
                android:textColor="#FF282853"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Số tiền vay (VND)"
            android:textColor="#FF59616B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_loan_money"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2.000.000"
            android:textColor="#FFE23620"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:src="@drawable/ruler" />

            <SeekBar
                android:id="@+id/sb_money"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:max="1000"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:progress="200"
                android:progressDrawable="@drawable/seekbar_style3"
                android:thumb="@drawable/scale"
                android:thumbOffset="2.7dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/sb_money"
                android:paddingLeft="20dp"
                android:text="1.0 "
                android:textColor="#FFE23621" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/sb_money"
                android:layout_alignParentRight="true"
                android:paddingLeft="20dp"
                android:text="10"
                android:textColor="#FFE23621" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Thời hạn vay"
            android:textColor="#FF59616B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_loan_days"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/day15"
            android:textColor="#FFE23620"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/chooseday"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unchooseday"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_loan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/home_button"
        android:text="@string/loan"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>